<?xml version="1.0"?>
<ruleset name="MyProjectStandards">
    <rule ref="PSR12"/>

    <rule ref="Generic.WhiteSpace.ScopeIndent">
        <severity>0</severity> <!-- 0 = disable, 5 = warning, 10 = error -->
    </rule>

    <file>src</file>
    <file>app</file>
    <file>index.php</file>

    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/tests/*</exclude-pattern>
    <exclude-pattern>*/blank copy.php</exclude-pattern>
    <exclude-pattern>*copy.php</exclude-pattern>

    <!--
    <arg name="colors" />
    <arg value="p" />
    -->
</ruleset>
